# AI User Control - Environment Variables Configuration
# Copy this file to .env and fill in your credentials

# ===========================================
# Export Configuration
# ===========================================
# Run data collection and CSV export on startup (true/false)
AI_CONTROL_EXPORT_ON_STARTUP=true

# Output directory for generated CSV files
AI_CONTROL_EXPORT_OUTPUT_DIR=./output

# Generate consolidated CSV with all users from all tools (true/false)
AI_CONTROL_EXPORT_CONSOLIDATED=false

# ===========================================
# Claude Code (Anthropic API)
# ===========================================
# Get credentials from: https://console.anthropic.com/
# IMPORTANT: You need an Admin API key (sk-ant-admin-...)
AI_CONTROL_CLAUDE_ENABLED=true
AI_CONTROL_CLAUDE_TOKEN=sk-ant-admin-xxxxxxxxxxxxxxxxxxxxx

# ===========================================
# GitHub Copilot
# ===========================================
# Get token from: https://github.com/settings/tokens
# Required scopes: read:org, manage_billing:copilot
AI_CONTROL_GITHUB_ENABLED=true
AI_CONTROL_GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxx
AI_CONTROL_GITHUB_ORG=your-organization-name

# ===========================================
# Cursor (Admin API)
# ===========================================
# Get token from Cursor dashboard
AI_CONTROL_CURSOR_ENABLED=true
AI_CONTROL_CURSOR_TOKEN=key_xxxxxxxxxxxxxxxxxxxxx
